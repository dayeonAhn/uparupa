<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <!-- datasource 설정 -->
    <settings>
        <setting name="jdbcTypeForNull" value="NULL" />
    </settings>

    <!-- typeAliases 설정 -->
    <typeAliases>
        <typeAlias alias="userDTO" type="org.rc.uparupa.LoginMapping.LoginDTO"/>
        <typeAlias alias="Booksearch" type="org.rc.uparupa.booksearch.BookDTO"/>
    </typeAliases>

    <!-- sql mapping 설정 -->
    <mappers>
        <mapper resource="mapping/login-mapping.xml"/>
        <mapper resource="mappings/bookSearch-mapping.xml"/>
    </mappers>
</configuration>


