<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="interestBookRepository">

	<resultMap id="interestBook" type="InterestBookDTO">
		<result property="id" column="ID" />
		<result property="isbn" column="ISBN" />
		<result property="createDate" column="CREATEDATE" />
		<result property="btitle" column="BTITLE" />
		<result property="thumbNail" column="THUMBNAIL" />
	</resultMap>
	
	<!-- 도서 관심등록 등록 -->
	<insert id="saveinterestBook" parameterType="InterestBookDTO">
        INSERT INTO bookFavorite (id, isbn, createDate, num, btitle, thumbNail)
        VALUES (#{id}, #{isbn}, sysdate, bookfa_seq.NEXTVAL, #{btitle}, #{thumbNail})
    </insert>
    
    <!-- 도서 즐겨찾기 확인 -->
    <select id="statusinterestBook" parameterType="map" resultType="int">
    	SELECT COUNT(*) FROM bookFavorite WHERE id=#{id} and isbn=#{isbn}
    </select>
    
    <!-- 도서 관심등록 취소 -->
    <delete id="deleteinterestBook" parameterType="InterestBookDTO">
    	DELETE FROM bookFavorite WHERE id= #{id} and isbn=#{isbn}
    </delete>
    
    
</mapper>