<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="LoginDAO">
	
	<resultMap id="user" type="userDTO">
		<result property="id" column="ID" />
		<result property="profile" column="PROFILE" />
		<result property="pwd" column="PWD" />
		<result property="name" column="NAME" />
		<result property="nickName" column="NICKNAME" />
		<result property="phone" column="PHONE" />
		<result property="email" column="EMAIL" />
		<result property="regDate" column="REGDATE" />
	</resultMap>
	
	
	<!-- 유저등록 -->
	<insert id="insertUser">
	<![CDATA[ 
		insert into users (id, profile, pwd, name, nickName, phone, email, regDate)
		values (#{id}, #{profile}, #{pwd}, #{name}, #{nickName}, #{phone}, #{email}, sysdate )
	]]>
	
	</insert>
	
	<!-- 수정 -->
	<update id="updateUser">
		update users set pwd=#{pwd}, nickName=#{nickName}, phone=#{phone} where email=${email}
	</update>	
	
	<!-- 회원 탈퇴 -->
	<delete id="deleteUser">
		delete users where email=#{email}
	</delete>
	
	<!-- 회원 리스트 조회 -->
	<select id="selectUser" parameterType="org.rc.uparupa.LoginMapping.LoginDTO" resultType="org.rc.uparupa.LoginMapping.LoginDTO">
		select * from users
	</select>
	
	<!-- id/pwd 조회 -->
	<select id="getUser" parameterType="org.rc.uparupa.LoginMapping.LoginDTO" resultType="org.rc.uparupa.LoginMapping.LoginDTO">
		select * from users where id=#{id} and pwd=#{pwd}
	</select>
	
	
	<!--id 찾기 -->
	<select id="findId" parameterType="org.rc.uparupa.LoginMapping.LoginDTO" resultType="org.rc.uparupa.LoginMapping.LoginDTO">
		select * from users where name=#{name} and email=#{email}
	</select>	
	
	<!--pwd 찾기 -->
	<select id="findPwd" parameterType="org.rc.uparupa.LoginMapping.LoginDTO" resultType="org.rc.uparupa.LoginMapping.LoginDTO">
		select * from users where id=#{id} and name=#{name} and email=#{email}
	</select>	
	
	<!-- pwd 새로 변경 -->
	<update id="findPwdResult" parameterType="org.rc.uparupa.LoginMapping.LoginDTO" >
		update users set pwd=#{pwd} where email=#{email}
	</update>
	
	
	<!-- 중복 조회 -->
	<select id="getIdChk" parameterType="org.rc.uparupa.LoginMapping.LoginDTO" resultType="org.rc.uparupa.LoginMapping.LoginDTO">
		select * from users where id=#{id}
	</select>
	
	<select id="getNickChk" parameterType="org.rc.uparupa.LoginMapping.LoginDTO" resultType="org.rc.uparupa.LoginMapping.LoginDTO">
		select * from users where nickName=#{nickName}
	</select>
	
	<select id="getEmailChk" parameterType="org.rc.uparupa.LoginMapping.LoginDTO" resultType="org.rc.uparupa.LoginMapping.LoginDTO">
		select * from users where email=#{email}
	</select>
	
</mapper>